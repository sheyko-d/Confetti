<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/bg</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/bg</item>
    </style>

    <style name="AppTheme.White" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Button.Base.BasicTitle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/btn_basic_title_txt_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:height">@dimen/btn_basic_title_height</item>
        <item name="elevation">@dimen/btn_elevation</item>
    </style>

    <style name="Button.Base.BasicTitle.Small" parent="Button.Base.BasicTitle">
        <item name="android:textSize">@dimen/btn_basic_title_small_txt_size</item>
        <item name="android:height">@dimen/btn_basic_title_small_height</item>
    </style>

    <style name="Button.Base.Roboto" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/btn_roboto_txt_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:height">@dimen/btn_roboto_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">@dimen/btn_elevation</item>
    </style>

    <style name="ButtonEmail" parent="Button.Base.Roboto">
        <item name="colorButtonNormal">@color/green</item>
    </style>

    <style name="ButtonGoogle" parent="Button.Base.Roboto">
        <item name="colorButtonNormal">@color/btn_google</item>
    </style>

    <style name="ButtonFacebook" parent="Button.Base.Roboto">
        <item name="colorButtonNormal">@color/btn_facebook</item>
    </style>

    <style name="ButtonGreen" parent="Button.Base.BasicTitle">
        <item name="colorButtonNormal">@color/green</item>
    </style>

    <style name="ButtonRed" parent="Button.Base.BasicTitle.Small">
        <item name="colorButtonNormal">@color/red</item>
    </style>

    <style name="ButtonPurple" parent="Button.Base.Roboto">
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="ButtonPurple.Small" parent="Button.Base.BasicTitle.Small">
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="MaterialDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="ToolBar" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/primary</item>
    </style>

</resources>
