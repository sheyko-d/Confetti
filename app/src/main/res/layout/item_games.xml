<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.moysof.blank.typeface.TextRobotoRegular
            android:id="@+id/join_game_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <com.moysof.blank.typeface.TextRobotoRegular
            android:id="@+id/join_game_username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />
    </LinearLayout>

    <com.moysof.blank.typeface.ButtonBasicTitle
        android:id="@+id/join_game_btn"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:text="@string/join_games_btn"
        android:textSize="20sp"
        android:theme="@style/ButtonGreen" />
</LinearLayout>