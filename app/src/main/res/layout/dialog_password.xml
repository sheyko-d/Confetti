<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="21dp"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:paddingStart="21dp"
    android:paddingTop="21dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/settings_password_old_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/settings_password_old_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/settings_password_old_hint"
                android:inputType="textPassword"
                android:textSize="16sp">

                <requestFocus />
            </EditText>
        </android.support.design.widget.TextInputLayout>

        <ProgressBar
            android:id="@+id/settings_password_progress_bar"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:visibility="gone" />
    </FrameLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/settings_password_new_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/settings_password_new_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settings_password_new_hint"
            android:inputType="textPassword"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/settings_password_repeat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/settings_password_repeat_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settings_password_repeat_hint"
            android:inputType="textPassword"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>