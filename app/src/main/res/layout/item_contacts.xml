<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.moysof.confetti.typeface.TextRobotoRegular
            android:id="@+id/contacts_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <com.moysof.confetti.typeface.TextRobotoLight
            android:id="@+id/contacts_phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/contacts_add_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/btn_pending_add_selector" />
</LinearLayout>