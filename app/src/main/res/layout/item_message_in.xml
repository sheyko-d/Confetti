<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/thread_img"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@color/primary" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thread_img"
        android:background="@drawable/message_in_bg"
        android:orientation="vertical">

        <com.moysof.whattheblank.typeface.TextRobotoLight
            android:id="@+id/thread_message_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:includeFontPadding="false"
            android:text="Sammy's not answering!"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <com.moysof.whattheblank.typeface.TextRobotoRegular
            android:id="@+id/thread_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:text="5 sec ago"
            android:textColor="@color/secondary_text"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>