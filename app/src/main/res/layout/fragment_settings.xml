<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.moysof.blank.typeface.TextBasicTitleBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:text="@string/settings_account_header"
            android:textColor="@color/primary"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">

            <com.moysof.blank.typeface.TextRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_name"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <com.moysof.blank.typeface.TextRobotoLight
                android:id="@+id/settings_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">

            <com.moysof.blank.typeface.TextRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_username"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <com.moysof.blank.typeface.TextRobotoLight
                android:id="@+id/settings_username_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">

            <com.moysof.blank.typeface.TextRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_phone"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <com.moysof.blank.typeface.TextRobotoLight
                android:id="@+id/settings_phone_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">

            <com.moysof.blank.typeface.TextRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_email"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <com.moysof.blank.typeface.TextRobotoLight
                android:id="@+id/settings_email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">

            <com.moysof.blank.typeface.TextRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_password"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <com.moysof.blank.typeface.TextRobotoLight
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_password_change"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />
        </LinearLayout>

        <com.moysof.blank.typeface.TextRobotoRegular
            android:id="@+id/settings_logout_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:text="@string/settings_logout"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <com.moysof.blank.typeface.TextBasicTitleBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:text="@string/settings_support"
            android:textColor="@color/primary"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary" />

        <com.moysof.blank.typeface.TextRobotoRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:onClick="support"
            android:padding="16dp"
            android:text="@string/settings_support"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <com.moysof.blank.typeface.TextRobotoRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:onClick="rate"
            android:padding="16dp"
            android:text="@string/settings_rate"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <com.moysof.blank.typeface.TextRobotoRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:onClick="purchase"
            android:padding="16dp"
            android:text="@string/settings_purchase"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <com.moysof.blank.typeface.TextRobotoRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:onClick="about"
            android:padding="16dp"
            android:text="@string/settings_about"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />


    </LinearLayout>
</ScrollView>